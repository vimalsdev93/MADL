<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:gravity="center"
            android:layout_width="233dp"
            android:layout_height="25dp"
            android:text="vikram krishna "
            android:textSize="20sp" android:id="@+id/tv1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button

            android:layout_width="130dp"
            android:layout_height="54dp" android:id="@+id/bt1"
            android:layout_marginTop="58dp" app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="138dp"
            android:text="change text"/>
    <Button

            android:layout_width="132dp"
            android:layout_height="60dp" android:id="@+id/bt2"
            android:layout_marginTop="65dp" app:layout_constraintTop_toBottomOf="@+id/bt1"
